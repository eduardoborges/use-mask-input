{
  "name": "use-mask-input-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for use-mask-input",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=use-mask-input && changeset publish",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "turbo": "^2.3.3",
    "typescript": "5.1"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "packageManager": "npm@10.0.0"
}
